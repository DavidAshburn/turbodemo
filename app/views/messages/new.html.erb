<div class="flex flex-col gap-10 justify-center align-center">
	<h1 class="font-monoton text-6xl"> New Message </h1>

	

	<%= turbo_frame_tag "new_message", target: "_top" do %>
		<%= form_with(model: [ @message.room, @message ], data: {controller: "reset_form", action: "turbo:submit-end->reset_form#reset"}) do |form| %>
			<div class="field">
				<%= form.text_field :content %>
				<%= form.submit "Send", class:"btn-green mb-4" %>
			</div>
		<% end %>
	<% end %>

	<%= link_to "Back", @message.room, class:"btn-grey m-4" %>
</div>